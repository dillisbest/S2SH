<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 处在开发模式下，可以修改xml文件，而不用重新部署 -->
	<constant name="struts.devMode" value="true" />

	<!--
		Sturts2中的package用来区分同名的action，与Java的package类似 在开发当中一般用模块名来命名namespace。
		namespace=""，那么访问该应用下的任何welcome.action，都可以处理
	-->
	<package name="struts_test_one" namespace="/" extends="struts-default">
		<action name="hello">
			<!-- 默认result的name属性就是success，就是默认不用写 -->
			<result>
				/hello.jsp
			</result>
		</action>
		<action name="doLogin" class="org.edm.action.LoginAction" method="toLogin">
			<result name="success">/welcome.jsp</result>
			<result name="fail">/fail.jsp</result>
		</action>
	</package>
</struts>    
